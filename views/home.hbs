<div class="row">
  <div class="col col-md-4 offset-md-4 col-sm-12">
    <h2 class="w3-center">Sana.org.mx</h2>
</div>
</div>

<div class="row">
  <div class="col col-md-6 offset-md-3 col-sm-12">
    <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img class="d-block w-100" src="/images/healthyEating.jpg" alt="healthyEating">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="/images/healthyEating2.jpg" alt="healthyEating2">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="/images/healthyEatin3.jpg" alt="healthyEatin3">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="/images/healthyEating4.jpg" alt="healthyEating4">
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col col-md-7 offset-md-5 col-sm-12">
      <form id="form" action="/" method="POST">
        <label for="username">Nombre De Usuario</label><br>
        <input type="text" name="email"
          placeholder="ElizaldeArana">
        <br><br>
        <label for="password">Contraseña</label><br>
        <input type="password" name="password"
          placeholder="1234">
        <br><br>
        <button>Iniciar sesión</button>

        {{#if errorMessage }}
          <div class="error-message">{{ errorMessage }}</div>
        {{/if}}

      </form>

      <a href="/signup">
        <button>Crear cuenta</button>
      </a>

    </div>
  </div>
